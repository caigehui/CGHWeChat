#import "ProgressView.h"

@implementation ProgressView

+ (MBProgressHUD *) showHUDAddedTo:(UIView *)view animated:(BOOL)animated withMessage:(NSString *)message
{
    MBProgressHUD * mbProgressHUD =  [super showHUDAddedTo:view animated:animated withMessage:message];
    
    int64_t delayInSeconds = 15.0;
    dispatch_time_t popTime = dispatch_time(DISPATCH_TIME_NOW, delayInSeconds * NSEC_PER_SEC);
    dispatch_after(popTime, dispatch_get_main_queue(), ^(void){
        [mbProgressHUD hide:YES];
        
    });
    return mbProgressHUD;
}

@end
